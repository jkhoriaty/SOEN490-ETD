<Window x:Class="ETD_Statistic.ViewsPresenters.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:ETD_Statistic.Properties"
        Title="Login" Height="170" Width="330">
    <StackPanel Margin="0,24,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Label x:Uid="Label_Username" Grid.Row ="0" Grid.Column="0" Content="{x:Static properties:Resources.Label_Username}" />
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="username" />
            <Label x:Uid="Label_Password" Grid.Row="1" Grid.Column="0" Content="{x:Static properties:Resources.Label_Password}" />
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="password" />
        </Grid>
        <Button x:Uid="Button_LoginSubmit" Click="Submit_Click" Width="100" Content="{x:Static properties:Resources.Button_LoginSubmit}" Margin="111,0" />
    </StackPanel>

</Window>
