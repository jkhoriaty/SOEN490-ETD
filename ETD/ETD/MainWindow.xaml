<Window x:Class="ETD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Emergency Team Dispatcher" WindowStartupLocation="CenterScreen" WindowState="Maximized" SizeChanged="Window_SizeChanged" StateChanged="Window_StateChanged" MinWidth="1000" MinHeight="700" >
	<Grid Margin="2,2,2,2">
		<!-- The following is the team display section along with the tag and the button to add new teams -->
		<Border Name="TeamSection" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Padding="2">
			<StackPanel>
				<Label Name="TeamsSectionLabel" Content="Teams" FontWeight="ExtraBlack" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
				<ScrollViewer Name="Scroller" VerticalScrollBarVisibility="Auto">
					<Grid>
						<StackPanel Name="TeamList">
							<!-- Team display is here -->
							
						</StackPanel>
					</Grid>
				</ScrollViewer>
				<Border Margin="0,5,0,2" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
					<Button Name="CreateTeamButton" Content="+" FontSize="30" FontWeight="ExtraBlack" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Transparent" Click="CreateTeam"></Button>
				</Border>
			</StackPanel>
		</Border>
	</Grid>
</Window>
