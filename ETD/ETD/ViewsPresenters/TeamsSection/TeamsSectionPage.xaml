<Page x:Class="ETD.ViewsPresenters.TeamsSection.TeamsSectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="TeamsSectionPage">

	<StackPanel>
		<Label Name="TeamsSectionLabel" Content="Teams" FontWeight="ExtraBlack" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
		<ScrollViewer Name="Scroller" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="TeamList" MouseLeftButtonDown="frameSelection">
				<!-- Team display is here -->
            </StackPanel>
		</ScrollViewer>
		<Border Name="CreateTeamButtonBorder" Margin="0,5,0,2" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
			<Button Name="CreateTeamButton" Content="+" FontSize="30" FontWeight="ExtraBlack" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White" BorderBrush="Transparent" Click="DisplayCreateTeamForm"></Button>
		</Border>
	</StackPanel>
</Page>
