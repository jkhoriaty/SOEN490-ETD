<Window x:Class="ETD.ViewsPresenters.InitialSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InitialSetup" Height="300" Width="300">
    <StackPanel>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="Label"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row ="0" Grid.Column="0">Operation Name</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Name="operationName"></TextBox>
        <Label Grid.Row="1" Grid.Column="0">Acronym</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Name="acronym"></TextBox>
        <Label Grid.Row="2" Grid.Column="0">Shift Start Date</Label>
        <DatePicker Grid.Row="2" Grid.Column="1" Name="shiftStartDate"></DatePicker>
        <Label Grid.Row="3" Grid.Column="0">Shift Start Time</Label>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <TextBox Name="shiftStartTimehh" Width="30" MaxLength="2">hh</TextBox>
                <TextBox Name="shiftStartTimemm" Width="30" MaxLength="2">mm</TextBox>
            </StackPanel>
            <Label Grid.Row="4" Grid.Column="0">Shift End Date</Label>
        <DatePicker Grid.Row="4" Grid.Column="1" Name="shiftEndDate"></DatePicker>
        <Label Grid.Row="5" Grid.Column="0">Shift End Time</Label>
            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                <TextBox Name="shiftEndTimehh" Width="30" MaxLength="2">hh</TextBox>
                <TextBox Name="shiftEndTimemm" Width="30" MaxLength="2">mm</TextBox>
            </StackPanel>
            <Label Grid.Row="6" Grid.Column="0">Dispatcher Name</Label>
        <TextBox Grid.Row="6" Grid.Column="1" Name="dispatcherName"></TextBox>
    </Grid>
        <Button Click="Submit_Click" Width="100">Submit</Button>
        
    </StackPanel>
</Window>
