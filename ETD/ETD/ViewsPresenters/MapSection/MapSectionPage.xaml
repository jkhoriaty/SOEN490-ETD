<Page x:Class="ETD.ViewsPresenters.MapSection.MapSectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="MapSectionPage">

	<Canvas Name="Map" MouseRightButtonDown="Map_MouseRightButtonDown">
        
	</Canvas>
	
    <Page.Resources>
		<ContextMenu x:Key="ContextMenu" Opened="EditMenuItems">
			<MenuItem Header="Available" Tag="team" Click="ChangeStatus"/>
			<MenuItem Header="Moving" Tag="team" Click="ChangeStatus"/>
			<MenuItem Header="Intervening" Tag="team" Click="ChangeStatus"/>
			<MenuItem Header="Unavailable" Tag="team" Click="ChangeStatus"/>
			<MenuItem Header="Delete Equipment" Tag="equipment" Click="DeleteEquipment"/>
            <MenuItem Header="100%" Tag="map" Click="Zoom"/>
            <MenuItem Header="120%" Tag="map" Click="Zoom"/>
            <MenuItem Header="140%" Tag="map" Click="Zoom"/>
            <MenuItem Header="160%" Tag="map" Click="Zoom"/>
            <MenuItem Header="180%" Tag="map" Click="Zoom"/>
            <MenuItem Header="200%" Tag="map" Click="Zoom"/>
		</ContextMenu>
    </Page.Resources>
</Page>
