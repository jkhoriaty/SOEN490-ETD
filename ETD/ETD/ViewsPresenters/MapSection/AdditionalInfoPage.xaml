<Page x:Class="ETD.ViewsPresenters.MapSection.AdditionalInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="AdditionalInfoPage">

    <Canvas Name="AdditionalMap">
        
        
    </Canvas>
    <Page.Resources>
        <ContextMenu x:Key="AIcontext" >
            <MenuItem Header="Resize" Name="Resize" >
                <MenuItem Header="Small" Name="small" Click="ScalePin"></MenuItem>
                <MenuItem Header="Medium" Name="medium" Click="ScalePin"></MenuItem>
                <MenuItem Header="Large" Name="large" Click="ScalePin"></MenuItem>
            </MenuItem>
            <MenuItem Header="Delete" Click="AIDeletePin"></MenuItem>
        </ContextMenu>
    </Page.Resources>
</Page>
