<Window x:Class="ETD.ViewsPresenters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Emergency Team Dispatcher"
		WindowStartupLocation="CenterScreen"
		WindowState="Maximized"
		SizeChanged="setTeamsSectionHeight"
		StateChanged="setTeamsSectionHeight"
		MinWidth="1000"
		MinHeight="700"
		Height="700"
		Width="1000">
	<Grid>
		<!-- The following is the team display section along with the tag and the button to add new teams -->
		<Border Name="TeamSection" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="250" Padding="2">
			<!-- Here goes the TeamsSectionPage frame -->
		</Border>
		
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,0,0,0">
			<!-- Here go all the buttons -->
			<Button Content="Load Map" Name="Load_Map" Click="LoadMap" Margin="2,0,2,0"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="250,0,0,0">
			<!-- Here go all the buttons -->
			<Button Content="Ambulance Cart" Name="ambulanceCart" Click="CreateEquipmentPin" Margin="2,0,2,0"/>
			<Button Content="Sitting Cart" Name="sittingCart" Click="CreateEquipmentPin" Margin="2,0,2,0"/>
			<Button Content="Epipen" Name="epipen" Click="CreateEquipmentPin" Margin="2,0,2,0"/>
			<Button Content="Transport Stretcher" Name="transportStretcher" Click="CreateEquipmentPin" Margin="2,0,2,0"/>
			<Button Content="Mounted Stretcher" Name="mountedStretcher" Click="CreateEquipmentPin" Margin="2,0,2,0"/>
			<Button Content="Wheelchair" Name="wheelchair" Click="CreateEquipmentPin" Margin="2,0,2,0"/>
		</StackPanel>
		<Border Name="MapSection" BorderBrush="Black" BorderThickness="1" Margin="250,20,0,200">
			<!-- Here goes the MapSectionPage frame -->
		</Border>
	</Grid>
</Window>
