<Page x:Class="ETD.ViewsPresenters.InterventionsSection.InterventionForm.InterventionFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="InterventionForm">
	
	<Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
		<Grid>
			<TabControl>
				<TabItem Header="Preview">
					
				</TabItem>
				<TabItem Header="Details">
					<StackPanel>
						<UniformGrid Rows="1" Margin="0,1,0,1">
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
								<Label Content="Call:"/>
								<TextBox Name="timeOfCallhh" Width="30" Text="hh" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
								<Label Content=":" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
								<TextBox Name="timeOfCallmm" Width="30" Text="mm" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
							</StackPanel>
							<TextBox Text="Caller" Name="callerName" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
						</UniformGrid>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="1*"/>
								<ColumnDefinition Width="2*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="1*"/>
								<RowDefinition Height="1*"/>
							</Grid.RowDefinitions>
							<Label Grid.Row="0" Grid.Column="0" Content="Location:" Margin="0,1,0,1"/>
							<TextBox Grid.Row="0" Grid.Column="1" Name="location" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,1,0,1"/>
							<Label Grid.Row="1" Grid.Column="0" Content="Location:" Margin="0,1,0,1"/>
							<TextBox Grid.Row="1" Grid.Column="1" Name="typeOfCall" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,1,0,1"/>
						</Grid>
						
						<Border BorderThickness="1" BorderBrush="Black" Margin="0,2,0,2"/>
						
						<UniformGrid Rows="1" Margin="0,2,0,2">
							<StackPanel Orientation="Horizontal">
								<Label Content="Priority:"/>
								<ComboBox>
									<ComboBoxItem Content="1"/>
									<ComboBoxItem Content="2"/>
								</ComboBox>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<Label Content="Gender:"/>
								<ComboBox>
									<ComboBoxItem Content="M"/>
									<ComboBoxItem Content="F"/>
								</ComboBox>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<Label Content="Age:"/>
								<TextBox Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
							</StackPanel>
						</UniformGrid>
						<Grid Margin="0,2,0,2">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="1*"/>
								<ColumnDefinition Width="2*"/>
							</Grid.ColumnDefinitions>
							<Label Grid.Column="0" Content="Complaint:"/>
							<ComboBox Grid.Column="1" Margin="0,2,0,2">
								<ComboBoxItem Content="Musculo-Squelettique"/>
								<ComboBoxItem Content="Number 2"/>
								<ComboBoxItem Content="Number 3"/>
								<ComboBoxItem Content="Number 4"/>
								<ComboBoxItem Content="Number 5"/>
							</ComboBox>
						</Grid>
					</StackPanel>
				</TabItem>
				<TabItem Header="Resources">

				</TabItem>
				<TabItem Header="End">

				</TabItem>
			</TabControl>
		</Grid>
	</Border>
</Page>
