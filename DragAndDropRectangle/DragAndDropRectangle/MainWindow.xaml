<Window x:Class="DragAndDropRectangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="454.8" Width="853">
	<Grid>
		<Border BorderBrush="Black" BorderThickness="1" Width="200" Height="200">
			<Canvas Name="canvas">
				<Rectangle
                    Name="rect"
                    Width="50"
                    Height="50"
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Fill="Red"
                    MouseLeftButtonDown="rect_MouseLeftButtonDown"
                    MouseLeftButtonUp="rect_MouseLeftButtonUp"
                    MouseMove="rect_MouseMove"
                    />
			</Canvas>
		</Border>
		<Button Content="Click to display text from database" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Click="Button_Click"/>
		<TextBlock Name="box" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Default Text" VerticalAlignment="Top" Margin="0,24,0,0"/>
	</Grid>
</Window>
