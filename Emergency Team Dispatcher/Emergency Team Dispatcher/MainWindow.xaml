<Window x:Name="Main_Window" x:Class="Emergency_Team_Dispatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Emergency Team Dispatcher" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="527*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Name="_File" Header="_File">
                    <MenuItem Name="_NewEvent" Header="_New Event" Click="NewEvent_MenuItem_Click"/>
                    <MenuItem Name="_LoadMap" Header="_Load Map" Click="Map_MenuItem_Click"/>
                    <MenuItem Name="_CreateTeam" Header="Create Team" Click="Team_MenuItem_Click"/>
                    <MenuItem Name="_Exit" Header="_Exit" Click="Exit_MenuItem_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel>

            </StackPanel>
        </DockPanel>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,20,650,125">
            <Canvas Name="Team_display" Margin="0,0,0,0">

               

            </Canvas>
        </Border>

        <Border BorderBrush="Black" BorderThickness="1" Margin="140,20,0,125">
            <Canvas Name="canvas" Margin="0,0,0,0">

            </Canvas>
        </Border>
    </Grid>
</Window>
